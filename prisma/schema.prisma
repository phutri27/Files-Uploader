generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int    @id @default(autoincrement())
  username  String @unique
  password  String
  firstName String
  lastName  String
  folders   Folder[]
}

model Folder{
  id Int @id @default(autoincrement())
  name String 
  user User @relation(fields: [userId], references: [id])
  userId Int
  folder Folder? @relation("parent",fields: [parentId], references: [id])
  parentId Int?
  files File[]
  parent Folder[] @relation("parent")

  @@unique([userId, parentId, name])
}

model File {
  id       Int      @id @default(autoincrement())
  fileName String
  fileSize Float
  folder  Folder @relation(fields: [folderId], references: [id])
  folderId Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
